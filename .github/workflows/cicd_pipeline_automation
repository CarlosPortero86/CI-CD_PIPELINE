name: CI/CD Pipeline

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14.X'

    - name: Linter Check
      uses: ./.github/actions/linter
      with:
        required-file: 'path/to/required/file' 
        # Ajuste conforme necessário

    - name: Install dependencies
      run: npm install

    - name: Run unit tests
      run: npm test

    - name: Build application
      run: npm run build

    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: build-artifact
        path: build/ 
        # Ajuste conforme o caminho do seu build

    - name: Create GitHub release
      id: create_release
      uses: actions/create-release@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        tag_name: v1.0.0
        release_name: Release v1.0.0
        draft: false
        prerelease: false

    - name: Upload build artifact to release
      uses: actions/upload-release-asset@v1
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      with:
        upload_url: ${{ steps.create_release.outputs.upload_url }}
        asset_path: build/
        asset_name: build.zip
        asset_content_type: application/zip

  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: test
      url: https://your-test-environment-url.com
      reviewers:
        - CarlosPortero86 
        # Substitua pelo seu usuário ou grupo do GitHub
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Deploy to test environment
      run: |
        echo "Deploying to test environment"
        # Adicione aqui o comando de deploy para o seu ambiente de teste

  notify:
    runs-on: ubuntu-latest
    if: failure()
    steps:
    - name: Send email notification
      uses: dawidd6/action-send-mail@v3
      with:
        server_address: smtp.example.com
        # adicionar url da aplicação
        server_port: 587
        username: ${{ secrets.SMTP_USERNAME }}
        password: ${{ secrets.SMTP_PASSWORD }}
        subject: CI/CD Pipeline Failed
        to: sandro_sdp@yahoo.com.br
        from: sandro_sdp@yahoo.com.br
        body: |
          The CI/CD pipeline failed at job: ${{ job.name }}
          Please check the logs for more details.
